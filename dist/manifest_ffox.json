{
    "name": "meemo",
    "description": "uhh.. TODO!!",
    "version": "1.0",
    "manifest_version": 3,

    "icons": {
      "48": "icon48.png",
      "128": "icon128.png"
    },

    "permissions": ["storage"],

    "action": {},
    "options_ui": {
      "page": "optionsPage/options.html",
      "open_in_tab": false
    },
    "background": {
      "scripts": ["backgroundScript/background.bundle.js"]
    },
    "content_scripts": [
      {
      "all_frames": true,
      "js": [ "contentScript/content.bundle.js" ],
      "match_about_blank": true,
      "matches": [ "http://*/*", "https://*/*", "ftp://*/*", "file:///*" ]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["icon.png", "data/flags/*.svg", "data/dicts/*.csv", "icons/*", "modules/*"],
        "matches": [ "<all_urls>"]
      }
    ] 
  }