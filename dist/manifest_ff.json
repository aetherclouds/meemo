{
  "name": "meemo",
  "description": "A couple versatile tools aimed at language learners!",
  "version": "0.0.0.1",
  "manifest_version": 2,

  "icons": {
    "48": "contents/icons/ext-icon48.png",
    "128": "contents/icons/ext-icon128.png"
  },

  "permissions": ["storage"],

  "action": {},
  "options_ui": {
    "page": "contents/html/options.html",
    "open_in_tab": false
  },
  "background": {
    "scripts": ["contents/js/backgroundScript/background.js"],
    "type": "module"
  },

  "content_scripts": [
    {
    "all_frames": false,
    "js": [ "contents/js/contentScript/content.js", "contents/js/Content.js"],
    "match_about_blank": true,
    "matches": [ "http://*/*", "https://*/*", "ftp://*/*", "file:///*" ],
    "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [ 
    [  "contents/data/flags/*.svg", "contents/data/dicts/*.csv", "contents/icons/*", "contents/js/**/*.js", "contents/js/*.js", "contents/css/*.css"]
  ],
  
  "browser_specific_settings": {
    "gecko": {
      "id": "azethercloudschrm@gmail.com"
    }
  }  
}